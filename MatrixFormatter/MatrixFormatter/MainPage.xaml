<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatrixFormatter.MainPage">

    <StackLayout>
        <Label Text="Matrix Size" FontSize="Large"/>
        <StackLayout Orientation="Horizontal">
            <Label Text="Rows: "/>
            <Entry Text="{Binding MatrixRows}"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Columns:"/>
            <Entry Text="{Binding MatrixColumns}"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button Text="Create Matrix" Clicked="CreateMatrix_OnClicked"/>
            <Button Text="Create Identity Matrix" Clicked="CreateIdentityMatrix_OnClicked"/>
            <Button Text="Hide Matrix Cells" Clicked="ToggleCells_OnClicked"/>
            <Button x:Name="ExportButton" Text="Export Matrix to OneNote" IsVisible="False" Clicked="Export_OnClicked"/>
        </StackLayout>
        <Grid x:Name="MatrixGrid"/>
    </StackLayout>

</ContentPage>