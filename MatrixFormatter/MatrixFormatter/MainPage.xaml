<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatrixFormatter.MainPage">

    <StackLayout>
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection Title="Matrix Size">
                    <EntryCell
                        Label="Rows:"
                        Text="{Binding MatrixRows}"/>
                    <EntryCell
                        Label="Columns"
                        Text="{Binding MatrixColumns}"/>
                    <ViewCell>
                        <StackLayout>
                            <Button Text="Create Matrix" Clicked="CreateMatrix_OnClicked"/>
                            <Grid x:Name="MatrixGrid"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>

</ContentPage>
